<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lovejiaming.timemovieinkotlin.views.fragments.RankListFragment"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/weeklyfocus_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_weeklyfocus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginTop="10px"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="italic" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_weeklyfocus"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_gravity="center"
            android:layout_marginLeft="115px"
            android:layout_marginRight="115px"
            android:layout_marginTop="10px"
            android:clipChildren="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weeklyexpect_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_weeklyexpect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginTop="10px"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="italic" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_weeklyexpect"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:layout_gravity="center"
            android:layout_marginLeft="115px"
            android:layout_marginRight="115px"
            android:layout_marginTop="10px"
            android:clipChildren="false" />
    </LinearLayout>


</LinearLayout>
